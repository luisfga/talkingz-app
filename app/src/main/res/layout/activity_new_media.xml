<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.luisfga.talkingz.ui.attachments.AttachNewMediaActivity"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/add_photo_cancel_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="center"
        android:src="@drawable/ic_clear"
        android:background="@drawable/custom_bg_circle"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/add_photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/person_8x10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <VideoView
        android:id="@+id/add_video_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/person_8x10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/add_photo_msg_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Digite aqui"
            android:inputType="textNoSuggestions|textCapSentences|textMultiLine"
            android:imeOptions="normal"
            android:maxLines="7" />

        <ImageButton
            android:id="@+id/add_photo_send_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_send"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>