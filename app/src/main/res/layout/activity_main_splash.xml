<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@id/splash_msg"
        android:layout_marginBottom="25dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/splash_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/splash_progress_bar"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/splash_progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateDrawable="@drawable/progress_animation"/>

    <TextView
        android:id="@+id/splash_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:layout_below="@id/splash_progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25sp"/>

</RelativeLayout>