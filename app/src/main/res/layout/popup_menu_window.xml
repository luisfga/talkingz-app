<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/attachments_menu_relative_layout"
        android:background="@color/white">

        <Button
            android:id="@+id/foto_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_camera"
            android:textAllCaps="false"
            android:text="Foto"
            android:textSize="12sp"
            android:layout_toStartOf="@id/video_menu_button"/>

        <Button
            android:id="@+id/video_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_videocam"
            android:textAllCaps="false"
            android:text="Vídeo"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/gallery_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_gallery"
            android:textAllCaps="false"
            android:text="Galeria"
            android:textSize="12sp"
            android:layout_toEndOf="@id/video_menu_button"/>

        <Button
            android:id="@+id/audio_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_headset"
            android:textAllCaps="false"
            android:text="Áudio"
            android:textSize="12sp"
            android:layout_toStartOf="@id/doc_menu_button"
            android:layout_below="@id/video_menu_button"/>

        <Button
            android:id="@+id/doc_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_file"
            android:textAllCaps="false"
            android:text="Documento"
            android:textSize="12sp"
            android:layout_below="@id/video_menu_button"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/contato_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_person"
            android:textAllCaps="false"
            android:text="Contato"
            android:textSize="12sp"
            android:layout_toEndOf="@id/doc_menu_button"
            android:layout_below="@id/video_menu_button"/>

    </RelativeLayout>

</RelativeLayout>
