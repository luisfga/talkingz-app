<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.luisfga.talkingz.app.ui.profile.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/person_8x10"
        android:scaleType="centerCrop"
        android:id="@+id/thumbnail"/>
    <TextView
        android:layout_below="@id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameLabel"
        android:text="Nome"/>
    <EditText
        android:layout_below="@id/nameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:inputType="textPersonName"
        android:imeOptions="actionDone"/>
    <TextView
        android:layout_below="@id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailLabel"
        android:text="Email"/>
    <EditText
        android:layout_below="@id/emailLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:text=""
        android:inputType="textEmailAddress"
        android:imeOptions="actionDone"/>
    <TextView
        android:layout_below="@id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tokenLabel"
        android:text="Token"/>
    <EditText
        android:layout_below="@id/tokenLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_token"
        android:inputType="textEmailAddress"
        android:imeOptions="actionDone"/>
    <TextView
        android:layout_toEndOf="@id/thumbnail"
        android:layout_above="@id/joinDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/joinDateLabel"
        android:text="Data de cadastro"/>
    <TextView
        android:layout_toEndOf="@id/thumbnail"
        android:layout_above="@id/nameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/joinDate"
        android:text="20/04/20 10:00:00"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar e Sincronizar"
        android:textAllCaps="false"
        android:layout_below="@id/search_token"
        android:id="@+id/updateButton"/>

</RelativeLayout>